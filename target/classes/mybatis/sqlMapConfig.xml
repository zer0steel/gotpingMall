<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.OracleDriver" />
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:XE" />
				<property name="username" value="got" />
				<property name="password" value="got" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="mybatis/fileMapper.xml" />
		
		<mapper resource="mybatis/goodsMapper.xml" />
		<mapper resource="mybatis/goodsOptionMapper.xml" />
		<mapper resource="mybatis/optionStockMapper.xml" />
		<mapper resource="mybatis/categoryMapper.xml" />
		<mapper resource="mybatis/shippingReceivingMapper.xml" />
	</mappers>
</configuration>