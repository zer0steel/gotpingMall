<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.got.mapper.goods.GoodsMapper">
	<resultMap type="com.got.vo.file.GoodsImageVO" id="goodsImg">
		<id column="f_no" property="f_no"/>
		<result column="save_name" property="save_name"/>
		<result column="save_path" property="save_path"/>
		<result column="location" property="location"/>
	</resultMap>
	
	<resultMap type="com.got.vo.goods.GoodsVO" id="goods">
		<id column="g_no" property="g_no"/>
		<result column="purchase_price" property="purchase_price"/>
		<result column="sell_price" property="sell_price"/>
		<result column="discount_rate" property="discount_rate"/>
		<result column="name" property="name"/>
		<association property="mainImg" resultMap="goodsImg" />
	</resultMap>
</mapper>